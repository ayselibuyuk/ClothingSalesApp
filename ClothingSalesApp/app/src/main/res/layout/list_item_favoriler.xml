<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/lvUrun"
    android:background="@drawable/top_button_background"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp">

    <LinearLayout
        android:id="@+id/linearLayoutFavoriler"
        android:padding="10dp"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="127dp"
            android:layout_height="150dp"
            android:src="@drawable/elbise"
            android:layout_marginRight="2dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:gravity="left">

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tvBaslık"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="Başlık"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tvKisaAciklama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="Açıklama"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tvEskiFiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="Eski Fiyat: 120TL"
                android:textSize="17dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tvYeniFiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="100TL"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:text="SEPETE EKLE" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>